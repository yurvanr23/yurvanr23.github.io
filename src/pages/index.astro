---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";


const projects = [
  {
    title: "EfficientSAM Medical Segmentation",
    desc: "Lightweight SAM model for medical imaging.",
    img: "/projects/efficient-sam.png",
    link: "https://github.com/yurvanr23/EfficientSAM_for_MedicalImageAnalysis",
  },
  {
    title: "AI Girlfriend App",
    desc: "Flask + LLM conversational companion with voice.",
    img: "/projects/ai-girlfriend.png",
    link: "https://github.com/yurvanr23/AI-Girlfriend-App",
  },
  {
    title: "Pokémon Companion App",
    desc: "Interactive Pokédex, team builder, and quiz.",
    img: "/projects/pokemon.png",
    link: "https://github.com/yurvanr23/Pokemon-Companion-App",
  },
  ];
---

<BaseLayout>
  <!-- HERO -->
  <section class="container center-content" style="padding-top:120px">
    <h1>Yurvan Ramjan</h1>
    <p class="center-content" style="margin-top:14px; max-width:560px">
      AI • Machine Learning • Software Engineering
    </p>

    <div style="margin-top:28px; display:flex; gap:12px; flex-wrap:wrap">
      <a class="btn center-content" href="#projects">View Projects</a>
      <a class="btn center-content" href="/cv/YurvanRamjan_CV.pdf" download>Download CV</a>
      <a class="btn center-content" href="#contact">Contact</a>
    </div>
  </section>

  <!-- PROJECTS -->
  <section id="projects" class="container">
    <h2>Featured Projects</h2>
    <p class="subtitle">Selected work showcasing real‑world AI and software systems.</p>

    <div class="grid">
      <div class="card">
        <img
          src="/screenshots/efficientsam-med-img-analysis.png"
          alt="EfficientSAM preview"
          class="project-img"
        />

        <h3>EfficientSAM for Medical Image Analysis</h3>
        <p>Lightweight deep learning segmentation model optimised for medical image analysis.</p>
        <div style="margin:12px 0">
          <span class="tag">PyTorch</span>
          <span class="tag">Computer Vision</span>
          <span class="tag">Research</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/EfficientSAM_for_MedicalImageAnalysis">GitHub</a>
      </div>
        
      <div class="card">
        <img
          src="/screenshots/anime-girlfriend.png"
          alt="AI Girlfriend App preview"
          class="project-img"
        />
    
        <h3>Anime AI Girlfriend App</h3>
        <p>Real‑time conversational AI with natural voice synthesis and fallback TTS pipeline.</p>
        <div style="margin:12px 0">
          <span class="tag">Flask</span>
          <span class="tag">LLMs</span>
          <span class="tag">TTS</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/AI-Girlfriend-App">GitHub</a>
      </div>

      <div class="card">
        <img
          src="/screenshots/pokemon-app.png"
          alt="Pokemon App preview"
          class="project-img"
        />

        <h3>Pokémon Companion App</h3>
        <p>Interactive web app with team builder, battle simulator, and API‑driven data exploration.</p>
        <div style="margin:12px 0">
          <span class="tag">JavaScript</span>
          <span class="tag">REST API</span>
          <span class="tag">Frontend</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/Pokemon-Companion-App">GitHub</a>
      </div>
      
      <div class="card">
        <img
          src="/screenshots/nba-game-outcome-prediction.jpg"
          alt="NBA preview"
          class="project-img"
        />

        <h3>NBA Outcome Prediction</h3>
        <p>Machine learning regression models predicting NBA game outcomes using historical statistics.</p>
        <div style="margin:12px 0">
          <span class="tag">Machine Learning</span>
          <span class="tag">Data Science</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/COMP721-NBA-Performance-Analysis">GitHub</a>
      </div>

      <div class="card">
        <img
          src="/screenshots/sa-banknote-recognition.jpg"
          alt="SA Banknote Recognition preview"
          class="project-img"
        />

        <h3>South African Banknote Recognition</h3>
        <p>Computer vision model for recognising South African currency denominations from images.</p>
        <div style="margin:12px 0">
          <span class="tag">Deep Learning</span>
          <span class="tag">Image Classification</span>
          <span class="tag">PyTorch</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/South-African-Banknote-Recognition">GitHub</a>
      </div>
      
      
      <div class="card">
        <img
          src="/screenshots/random-anime-generator.png"
          alt="Random Anime Generator preview"
          class="project-img"
        />

        <h3>Online Random Anime Generator</h3>
        <p>Web application that fetches and displays random anime data using an external API.</p>
        <div style="margin:12px 0">
          <span class="tag">JavaScript</span>
          <span class="tag">API Integration</span>
          <span class="tag">Frontend</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/Online-Random-Anime-Generator">GitHub</a>
      </div>
      
      
      <div class="card">
        <img
          src="/screenshots/house-price-prediction.jpg"
          alt="House Price Prediction using Regression"
          class="project-img"
        />

        <h3>House Price Prediction Model</h3>
        <p>Regression-based machine learning pipeline for predicting residential property prices.</p>
        <div style="margin:12px 0">
          <span class="tag">Regression</span>
          <span class="tag">Scikit-learn</span>
          <span class="tag">Data Analysis</span>
        </div>
        <a class="btn" href="https://github.com/yurvanr23/House-Price-Prediction">GitHub</a>
      </div>
      
    </div>
  </section>

  <!-- SKILLS -->
  <section class="container center-content">
    <h2>Skills</h2>
    <p><strong>AI / ML:</strong> PyTorch, Transformers, Computer Vision, NLP</p>
    <p><strong>Development:</strong> Python, Java, Flask, APIs</p>
    <p><strong>Tools:</strong> Git, GitHub, Astro, Vercel</p>
    <p><strong>Learning:</strong> Cloud Computing, Cybersecurity, MLOps</p>
  </section>
  
  
  <!-- CONTACT -->
  <section id="contact" class="container center-content">
    <h2>Contact</h2>
    <p>Open to graduate AI, ML, and software engineering opportunities.</p>
    <div style="margin-top:20px; display:flex; gap:12px; flex-wrap:wrap">
      <a class="btn center-content" href="mailto:yurvanr23@gmail.com">Email</a>
      <a class="btn center-content" href="https://github.com/yurvanr23">GitHub</a>
      <a class="btn center-content" href="https://www.linkedin.com/in/yurvan-ramjan/">LinkedIn</a>
    </div>
  </section>
  
  
  <footer class="center-content">© 2026 Yurvan Ramjan</footer>
</BaseLayout>
