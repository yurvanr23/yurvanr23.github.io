---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";


const projects = [
  {
    title: "EfficientSAM Medical Segmentation",
    desc: "Lightweight SAM model for medical imaging.",
    img: "/projects/efficient-sam.png",
    link: "https://github.com/yurvanr23/EfficientSAM_for_MedicalImageAnalysis",
  },
  {
    title: "AI Girlfriend App",
    desc: "Flask + LLM conversational companion with voice.",
    img: "/projects/ai-girlfriend.png",
    link: "https://github.com/yurvanr23/AI-Girlfriend-App",
  },
  {
    title: "Pokémon Companion App",
    desc: "Interactive Pokédex, team builder, and quiz.",
    img: "/projects/pokemon.png",
    link: "https://github.com/yurvanr23/Pokemon-Companion-App",
  },
  ];
---

<BaseLayout>
  <section class="hero container">
    <h1>Yurvan Ramjan</h1>
    <p>AI • Machine Learning • Software Engineering</p>
  </section>


  <section class="container">
    <h2>Featured Projects</h2>
    <p class="subtitle">Selected work showcasing real‑world AI and software systems.</p>

    <div class="grid">
      {projects.map(p => (
        <div class="card">
          <img src={p.img} alt={p.title} />
          <h3>{p.title}</h3>
          <p>{p.desc}</p>
          <a class="button" href={p.link} target="_blank">View Project</a>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
