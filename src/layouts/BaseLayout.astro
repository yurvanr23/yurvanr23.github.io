---
const {
  title = "Yurvan Ramjan Portfolio",
  description = "AI, Machine Learning, and Software Engineering projects by Yurvan Ramjan.",
  image = "/preview.png",
  url = "https://yurvanr23-portfolio.vercel.app",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO -->
    <meta name="description" content={description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Styles -->
    <style>
      :root {
        --bg: #f5f6f7;
        --card: #ffffff;
        --text: #0a0a0a;
        --muted: #6b7280;
        --border: #e5e7eb;
        --accent: #2563eb;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
      }

      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 80px 24px;
      }
      
      h1 {
        font-size: 3rem;
        font-weight: 600;
        letter-spacing: -0.02em;
      }
      
      h2 {
        font-size: 2rem;
        margin-bottom: 24px;
        font-weight: 600;
      }
      
      p {
        color: var(--muted);
        font-size: 1.05rem;
      }

      .btn {
        display: inline-block;
        padding: 12px 18px;
        border-radius: 10px;
        border: 1px solid var(--border);
        background: white;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
      }
      
      .btn:hover {
        transform: translateY(-2px);
        border-color: var(--accent);
        color: var(--accent);
      }
      
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
      }
      
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 18px;
        padding: 22px;
        transition: all 0.25s ease;
      }

      .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.06);
      }
      
      .tag {
        font-size: 0.8rem;
        color: var(--muted);
        margin-right: 8px;
      }
      
      footer {
        text-align: center;
        padding: 40px 0 80px;
        color: var(--muted);
      }
    </style>


    <!-- Basic Favicon -->
    <link rel="icon" type="image/svg+xml "href="/favicon.svg" />
  </head>

  <body>
    <slot />
  </body>

</html>
